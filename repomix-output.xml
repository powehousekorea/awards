@import "tailwindcss";

:root {
  /* ===== Modern Authority Color Palette ===== */
  /* Warm Dark Brown - Poster Style */
  --color-dark-50: #f7f5f3;
  --color-dark-100: #e8e4e0;
  --color-dark-200: #d0c9c2;
  --color-dark-300: #a09590;
  --color-dark-400: #6b6058;
  --color-dark-500: #4a4038;
  --color-dark-600: #302820;
  --color-dark-700: #231c17;
  --color-dark-800: #1a1512;
  --color-dark-900: #120f0c;
  --color-dark-950: #0d0a08;

  /* Champagne Gold - Accent */
  --color-gold-50: #fdfbf7;
  --color-gold-100: #f9f3e6;
  --color-gold-200: #f0e4c8;
  --color-gold-300: #D4B886;
  --color-gold-400: #c9a66e;
  --color-gold-500: #b8955c;
  --color-gold-600: #9a7a48;
  --color-gold-700: #7a5f38;
  --color-gold-800: #5c4729;
  --color-gold-900: #3d2f1a;

  /* Semantic Colors */
  --background: #151210;
  --foreground: #e8e4e0;
  --muted: #231c17;
  --muted-foreground: #6b6058;
  --border: #302820;
  --ring: #D4B886;

  /* Animation - Subtle & Refined */
  --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
  --duration-fast: 200ms;
  --duration-normal: 300ms;
  --duration-slow: 500ms;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);

  /* Typography - Triple System (Sans / Serif / Mono) */
  --font-sans: 'Pretendard Variable', 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
  --font-serif: 'Noto Serif KR', 'Playfair Display', Georgia, serif;
  --font-mono: 'JetBrains Mono', 'SF Mono', 'Fira Code', 'Consolas', monospace;

  /* Colors */
  --color-dark-50: var(--color-dark-50);
  --color-dark-100: var(--color-dark-100);
  --color-dark-200: var(--color-dark-200);
  --color-dark-300: var(--color-dark-300);
  --color-dark-400: var(--color-dark-400);
  --color-dark-500: var(--color-dark-500);
  --color-dark-600: var(--color-dark-600);
  --color-dark-700: var(--color-dark-700);
  --color-dark-800: var(--color-dark-800);
  --color-dark-900: var(--color-dark-900);
  --color-dark-950: var(--color-dark-950);

  --color-gold-50: var(--color-gold-50);
  --color-gold-100: var(--color-gold-100);
  --color-gold-200: var(--color-gold-200);
  --color-gold-300: var(--color-gold-300);
  --color-gold-400: var(--color-gold-400);
  --color-gold-500: var(--color-gold-500);
  --color-gold-600: var(--color-gold-600);
  --color-gold-700: var(--color-gold-700);
  --color-gold-800: var(--color-gold-800);
  --color-gold-900: var(--color-gold-900);
}

/* ===== Base Styles ===== */
body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-sans);
  font-weight: 400;
  line-height: 1.6;
  letter-spacing: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ===== Typography System ===== */

/* Headings - Serif (Authority, Classic) */
h1, h2, h3 {
  font-family: var(--font-serif);
  font-weight: 700;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

h4, h5, h6 {
  font-family: var(--font-sans);
  font-weight: 600;
  letter-spacing: -0.01em;
  line-height: 1.3;
}

/* Display Text - Editorial Impact */
.text-display {
  font-family: var(--font-serif);
  font-weight: 700;
  line-height: 0.95;
  letter-spacing: -0.03em;
}

/* Label Text - Refined Small Caps */
.text-label {
  font-family: var(--font-sans);
  font-size: 10px;
  font-weight: 500;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--color-dark-400);
}

/* Body Text - Modern Sans */
.text-body {
  font-family: var(--font-sans);
  font-weight: 400;
  line-height: 1.7;
  color: var(--color-dark-300);
}

/* ===== Layout ===== */
.container-custom {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

@media (min-width: 768px) {
  .container-custom {
    padding: 0 3rem;
  }
}

@media (min-width: 1024px) {
  .container-custom {
    padding: 0 4rem;
  }
}

/* ===== Button Styles - Minimal & Sharp ===== */

/* Primary Button - Sharp Rectangle */
.btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.875rem 2rem;
  background: var(--color-gold-300);
  color: var(--color-dark-950);
  font-family: var(--font-sans);
  font-size: 0.8125rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  border: none;
  transition: all var(--duration-normal) var(--ease-smooth);
}

.btn-primary:hover {
  background: var(--color-gold-400);
}

/* Outline Button - Minimal */
.btn-outline {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.875rem 2rem;
  background: transparent;
  color: var(--color-dark-200);
  font-family: var(--font-sans);
  font-size: 0.8125rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  border: 1px solid var(--color-dark-600);
  transition: all var(--duration-normal) var(--ease-smooth);
}

.btn-outline:hover {
  color: var(--color-gold-300);
  border-color: var(--color-gold-300);
}

/* Text Link Button */
.btn-text {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--color-dark-200);
  font-family: var(--font-sans);
  font-size: 0.75rem;
  font-weight: 500;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  transition: color var(--duration-normal) var(--ease-smooth);
}

.btn-text:hover {
  color: var(--color-gold-300);
}

/* ===== Badge Styles - Clean & Minimal ===== */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.375rem 0.75rem;
  font-family: var(--font-sans);
  font-size: 0.625rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  border: 1px solid;
}

.badge-grand {
  border-color: var(--color-gold-300);
  color: var(--color-gold-300);
}

.badge-excellence {
  border-color: var(--color-dark-400);
  color: var(--color-dark-300);
}

.badge-merit {
  border-color: var(--color-dark-500);
  color: var(--color-dark-400);
}

.badge-special {
  border-color: #8b5cf6;
  color: #a78bfa;
}

.badge-innovation {
  border-color: #10b981;
  color: #34d399;
}

.badge-global {
  border-color: #3b82f6;
  color: #60a5fa;
}

/* ===== List Item Styles - Webby Gallery ===== */
.list-item {
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem 0;
  border-bottom: 1px solid var(--color-dark-800);
  transition: all var(--duration-normal) var(--ease-smooth);
}

.list-item:hover {
  background: var(--color-dark-900);
  padding-left: 1rem;
  padding-right: 1rem;
  margin-left: -1rem;
  margin-right: -1rem;
}

.list-item:hover .list-item-title {
  color: var(--color-gold-300);
}

.list-item:hover .list-item-arrow {
  opacity: 1;
  transform: translateX(0);
}

.list-item-title {
  font-family: var(--font-sans);
  font-weight: 500;
  color: var(--color-dark-100);
  transition: color var(--duration-normal) var(--ease-smooth);
}

.list-item-arrow {
  opacity: 0;
  transform: translateX(-8px);
  transition: all var(--duration-normal) var(--ease-smooth);
}

/* ===== Divider ===== */
.divider {
  height: 1px;
  background: var(--color-dark-800);
}

.divider-gold {
  height: 1px;
  background: linear-gradient(90deg, var(--color-gold-300), transparent);
  max-width: 120px;
}

/* ===== Animations ===== */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 0 20px rgba(212, 184, 134, 0.1); }
  50% { box-shadow: 0 0 30px rgba(212, 184, 134, 0.2); }
}

.animate-fade-in {
  animation: fadeIn 0.6s var(--ease-smooth) forwards;
}

.animate-slide-up {
  animation: slideUp 0.8s var(--ease-smooth) forwards;
}

.animate-slide-left {
  animation: slideInLeft 0.8s var(--ease-smooth) forwards;
}

.animate-fade-in-up {
  animation: fadeInUp 0.8s var(--ease-smooth) forwards;
}

.animate-shimmer {
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(212, 184, 134, 0.1) 50%,
    transparent 100%
  );
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

.animate-pulse-glow {
  animation: pulse-glow 3s ease-in-out infinite;
}

.animate-delay-1 { animation-delay: 0.1s; opacity: 0; }
.animate-delay-2 { animation-delay: 0.2s; opacity: 0; }
.animate-delay-3 { animation-delay: 0.3s; opacity: 0; }
.animate-delay-4 { animation-delay: 0.4s; opacity: 0; }
.animate-delay-5 { animation-delay: 0.5s; opacity: 0; }
.animate-delay-6 { animation-delay: 0.6s; opacity: 0; }
.animate-delay-7 { animation-delay: 0.7s; opacity: 0; }

/* ===== Scrollbar - Minimal ===== */
